set nocompatible
set bg=dark

set langmenu=en_US.UTF-8
set ve=block

set incsearch
set hlsearch
set ignorecase
set smartcase

set tabstop=8
set softtabstop=4
set expandtab
set shiftwidth=4

syntax on
filetype indent on
set number
set cursorline
set wildmenu
set showmatch
set ruler laststatus=2 showcmd showmode

set switchbuf=usetab,newtab
"set showtabline=2

